[Unit]
Description=MQTT Driver for snmp devices
After=network-online.target wb-hwconf-manager.service wb-modules.service

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
ExecStart=/bin/bash -c "HOME=/root exec /usr/bin/wb-mqtt-snmp -config /etc/wb-mqtt-snmp.conf 2>&1 | logger -t mqtt_snmp"

[Install]
WantedBy=multi-user.target